<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.mortbay.jetty.webapp.WebAppContext">

    <New id="DSTest" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>java:comp/env/jdbc/${artifactId}_test</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp2.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost/${artifactId}_test</Set>
            </New>
        </Arg>
    </New>

    <New id="DSTest" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>java:comp/env/jdbc/${artifactId}_development</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp2.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost/${artifactId}_development</Set>
            </New>
        </Arg>
    </New>

    <New id="DSTest" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>java:comp/env/jdbc/${artifactId}_production</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp2.BasicDataSource">
                <Set name="driverClassName">org.postgresql.Driver</Set>
                <Set name="url">jdbc:postgresql://localhost/${artifactId}_production</Set>
            </New>
        </Arg>
    </New>

</Configure>
